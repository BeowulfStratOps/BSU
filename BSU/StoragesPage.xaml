<UserControl x:Class="BSU.GUI.StoragesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BSU.GUI"
             xmlns:userControls="clr-namespace:BSU.GUI.UserControls"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:viewModel="clr-namespace:BSU.Core.ViewModel;assembly=BSU.Core"
             xmlns:actions="clr-namespace:BSU.GUI.Actions"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance viewModel:StoragePage}">
    <DockPanel>
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Raised" SourceObject="{Binding AddStorageInteraction}">
                <actions:AddStorageAction></actions:AddStorageAction>
            </i:EventTrigger>
        </i:Interaction.Triggers>

        <!-- TODO: figure out how to reuse this for all pages -->
        <DockPanel DockPanel.Dock="Top">
            <Button DockPanel.Dock="Right" Width="50" Command="{Binding Back}">Back</Button>
        </DockPanel>

        <ScrollViewer>
            <StackPanel>
                <ItemsControl ItemsSource="{Binding Path=Storages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <userControls:Storage></userControls:Storage>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button FontFamily="Segoe MDL2 Assets" FontSize="30" Content="&#xE710;" Margin="2" HorizontalAlignment="Left" Command="{Binding AddStorage}"></Button>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
