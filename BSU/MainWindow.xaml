<Window x:Class="BSU.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BSU.GUI.UserControls"
        xmlns:viewmodel="clr-namespace:BSU.Core;assembly=BSU.Core"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" d:DataContext="{d:DesignInstance viewmodel:Core}"
        Closing="MainWindow_OnClosing" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.RowSpan="2" ItemsSource="{Binding Path=ViewState.Repositories}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:Repository></local:Repository>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" ItemsSource="{Binding Path=ViewState.Storages}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:Storage></local:Storage>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox Grid.Column="2" Grid.Row="0" ItemsSource="{Binding Path=ViewState.Jobs}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:Job></local:Job>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox Grid.Column="2" Grid.Row="1" ItemsSource="{Binding Path=ViewState.Logs}">
        </ListBox>
    </Grid>
</Window>
