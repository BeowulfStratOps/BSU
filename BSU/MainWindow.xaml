<Window x:Class="BSU.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:BSU.Core.ViewModel;assembly=BSU.Core"
        xmlns:gui="clr-namespace:BSU.GUI"
        mc:Ignorable="d"
        Title="BSO Sync Utility" Height="450" Width="800" d:DataContext="{d:DesignInstance viewModel:ViewModel}"
        Closing="MainWindow_OnClosing" WindowState="Normal">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo></TaskbarItemInfo>
    </Window.TaskbarItemInfo>
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:RepositoriesPage}">
            <gui:RepositoriesPage />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:StoragePage}">
            <gui:StoragesPage />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:Repository}">
            <gui:RepositoryPage />
        </DataTemplate>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Manage"></MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About"></MenuItem>
                <MenuItem Header="_Show Logs"></MenuItem>
            </MenuItem>
        </Menu>
        <ContentControl Content="{Binding Content}"></ContentControl>
    </DockPanel>
</Window>
