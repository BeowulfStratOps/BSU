<UserControl x:Class="BSU.GUI.Components.Storage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:BSU.Core.ViewModel;assembly=BSU.Core"
             xmlns:components="clr-namespace:BSU.GUI.Components"
             xmlns:userControls="clr-namespace:BSU.GUI.UserControls"
             xmlns:converters="clr-namespace:BSU.GUI.Converters"
             xmlns:gui="clr-namespace:BSU.GUI"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="300" d:DataContext="{d:DesignInstance viewModel:Storage}">
    <Border Background="{DynamicResource BackgroundColor2Brush}" Margin="5">
        <Border.Resources>
            <converters:NullToCollapseConverter x:Key="NullToCollapse" />
        </Border.Resources>
        <DockPanel>
            <DockPanel Dock="Top" Margin="5">
                <StackPanel DockPanel.Dock="Left" Orientation="Vertical">
                    <TextBlock FontSize="14" FontWeight="Bold" Text="{Binding Path=Name, FallbackValue=Name}"></TextBlock>
                    <TextBlock Text="{Binding Path, FallbackValue=C:\asdf\places\and\stuff}"></TextBlock>
                    <TextBlock Foreground="Red" Visibility="{Binding Error, Converter={StaticResource NullToCollapse}}" Text="{Binding Error}" />
                </StackPanel>
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
                    <userControls:SvgButton DockPanel.Dock="Right" Width="30" Height="30" HideIfDisabled="True" Command="{Binding Delete}" Svg="{StaticResource SvgDelete}" ToolTip="Remove this Download Location"/>
                </StackPanel>
            </DockPanel>
            <StackPanel DockPanel.Dock="Top" MouseLeftButtonUp="ToggleShowMods">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Background" Value="{DynamicResource BackgroundColor1Brush}"></Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BackgroundColor2Brush}"></Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
                <gui:FontIcon Visibility="{Binding IsShowingMods, Converter={StaticResource BoolToVisibilityConverter}}" FontWeight="Bold" HorizontalAlignment="Center" Icon="E96D" Margin="3" />
                <gui:FontIcon Visibility="{Binding NotIsShowingMods, Converter={StaticResource BoolToVisibilityConverter}}" FontWeight="Bold" HorizontalAlignment="Center" Icon="E96E" Margin="3" />
            </StackPanel>
            <Border Visibility="{Binding IsShowingMods, Converter={StaticResource BoolToVisibilityConverter}}" Background="{DynamicResource BackgroundColor1Brush}">
                <ItemsControl ItemsSource="{Binding Path=Mods}" Padding="5">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <components:StorageMod></components:StorageMod>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </DockPanel>
    </Border>
</UserControl>
