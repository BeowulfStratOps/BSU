<UserControl x:Class="BSU.GUI.RepositoriesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BSU.GUI"
             xmlns:viewModel="clr-namespace:BSU.Core.ViewModel;assembly=BSU.Core"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:actions="clr-namespace:BSU.GUI.Actions"
             xmlns:components="clr-namespace:BSU.GUI.Components"
             xmlns:userControls="clr-namespace:BSU.GUI.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance viewModel:RepositoriesPage}">
    <DockPanel>
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Raised" SourceObject="{Binding AddRepositoryInteraction}">
                <actions:AddRepositoryAction></actions:AddRepositoryAction>
            </i:EventTrigger>
        </i:Interaction.Triggers>

        <!-- TODO: figure out how to reuse this for all pages -->
        <DockPanel DockPanel.Dock="Top">
            <userControls:SvgButton DockPanel.Dock="Right" Width="50" Height="50" Command="{Binding ShowStorage}" Svg="{StaticResource SvgStorage}" />
        </DockPanel>


        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <ItemsControl  ItemsSource="{Binding Path=Repositories}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <components:Repository></components:Repository>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <userControls:SvgButton Width="50" Height="50" Command="{Binding AddRepository}" Svg="{StaticResource SvgAdd}"></userControls:SvgButton>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
