<UserControl x:Class="BSU.GUI.UserControls.StorageMod"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BSU.GUI.UserControls"
             xmlns:viewmodel="clr-namespace:BSU.Core.View;assembly=BSU.Core"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance viewmodel:StorageMod}">
    <WrapPanel>
        <TextBlock Text="{Binding Path=Identifier}"></TextBlock>
        <local:JobSlot DataContext="{Binding Path=Loading}"></local:JobSlot>
        <local:JobSlot DataContext="{Binding Path=Hashing}"></local:JobSlot>
        <local:JobSlot DataContext="{Binding Path=Updating}"></local:JobSlot>
    </WrapPanel>
</UserControl>
