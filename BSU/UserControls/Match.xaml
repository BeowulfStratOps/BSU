<UserControl x:Class="BSU.GUI.UserControls.Match"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BSU.GUI.UserControls"
             xmlns:viewmodel="clr-namespace:BSU.Core.View;assembly=BSU.Core"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance viewmodel:Match}">
    <WrapPanel>
        <TextBlock Text="{Binding Path=Action}">
            <TextBlock.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Do!!" Click="MenuItem_OnClick"></MenuItem>
                </ContextMenu>
            </TextBlock.ContextMenu>
        </TextBlock>
    </WrapPanel>
</UserControl>
