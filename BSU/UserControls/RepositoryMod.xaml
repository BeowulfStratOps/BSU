<UserControl x:Class="BSU.GUI.UserControls.RepositoryMod"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BSU.GUI.UserControls"
             xmlns:viewmodel="clr-namespace:BSU.Core.View;assembly=BSU.Core"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance viewmodel:RepositoryMod}">
    <WrapPanel>
        <TextBlock Text="{Binding Path=Name}"></TextBlock>
        <!-- <local:JobSlot DataContext="{Binding Path=Loading}"></local:JobSlot> -->
        <TextBlock Text="{Binding Path=DisplayName}"></TextBlock>
        <ListBox ItemsSource="{Binding Path=Matches}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:Match></local:Match>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox ItemsSource="{Binding Path=Downloads}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:DownloadAction></local:DownloadAction>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </WrapPanel>
</UserControl>
