<UserControl x:Class="BSU.GUI.UserControls.DownloadAction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BSU.GUI.UserControls"
             xmlns:viewModel="clr-namespace:BSU.Core.ViewModel;assembly=BSU.Core"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance viewModel:DownloadAction}">
    <WrapPanel>
        <TextBlock Text="Download to "></TextBlock>
        <!-- <local:JobSlot DataContext="{Binding Path=Loading}"></local:JobSlot> -->
        <TextBlock Text="{Binding Path=StorageName}"></TextBlock>
        <WrapPanel.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Do!!" Click="MenuItem_OnClick"></MenuItem>
            </ContextMenu>
        </WrapPanel.ContextMenu>
    </WrapPanel>
</UserControl>
