<UserControl x:Class="BSU.GUI.UserControls.Job"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BSU.GUI.UserControls"
             xmlns:viewModel="clr-namespace:BSU.Core.ViewModel;assembly=BSU.Core"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance viewModel:Job}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition MinWidth="200" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding Path=Title}"></TextBlock>
        <ProgressBar Grid.Column="1" Minimum="0" Maximum="100" Value="{Binding Path=Progress, Mode=OneWay}"></ProgressBar>
    </Grid>
</UserControl>
